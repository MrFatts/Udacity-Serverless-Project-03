{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "title": "todo",
  "type": "object",
  "properties": {
    "name": {
      "type": "string", 
      "minLength": 2, 
      "maxLength": 100, 
      "pattern": "^[a-zA-Z0-9 ]+$"
    },
    "dueDate": {
      "type": "string"
    }
  },
  "required": [
    "name",
    "dueDate"
  ],
  "additionalProperties": false
}
